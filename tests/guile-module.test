(define-module (tests guile-module)
  #:use-module (data foo)
  #:use-module (data bar)
  #:use-module (mes test))

(define (defined? name)
  (->bool (module-variable (current-module) name)))

(pass-if "first dummy" #t)
(pass-if-not "second dummy" #f)

(pass-if "defined foo"
  (defined? 'foo))

(pass-if-equal "foo"
    "foo"
  (and (defined? 'foo) foo))

(pass-if "defined bar"
  (defined? 'bar))

(pass-if-equal "bar"
    "bar"
  (and (defined? 'bar) bar))

(result 'report)
